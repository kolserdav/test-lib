    "eslint-plugin-react-hooks": "^4.3.0",
    "microbundle": "^0.15.0",
    "prettier": "^2.6.2",
    "sass": "^1.51.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier-scss": "^0.0.1",
